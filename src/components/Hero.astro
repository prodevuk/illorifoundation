---
import { Image } from 'astro:assets';
import headerImage from '../assets/images/header_image.png';

const carouselImages = [
  {
    src: 'https://images.pexels.com/photos/11369185/pexels-photo-11369185.jpeg',
    alt: "Mother holding child lovingly",
    type: 'remote'
  },
  {
    src: "https://images.pexels.com/photos/10653951/pexels-photo-10653951.jpeg",
    alt: "Close up shot of two girls smiling",
    type: 'remote'
  },
  {
    src: "https://images.unsplash.com/photo-1531983412531-1f49a365ffed?q=80&w=2000&auto=format&fit=crop",
    alt: "Close up of a mother and child",
    type: 'remote'
  }
];
---

<section class="relative bg-primary text-bone min-h-screen flex items-center overflow-hidden">
  
  <!-- Background Carousel -->
  <div class="absolute inset-0 w-full h-full z-0">
    {carouselImages.map((image, index) => (
      <div 
        class={`absolute inset-0 w-full h-full opacity-0 carousel-slide slide-${index}`}
      >
        {image.type === 'local' ? (
          <Image 
            src={image.src as any} 
            alt={image.alt} 
            class="object-cover w-full h-full mix-blend-overlay scale-105"
          />
        ) : (
          <img 
            src={image.src as string} 
            alt={image.alt} 
            class="object-cover w-full h-full mix-blend-overlay scale-105"
          />
        )}
      </div>
    ))}
    
    <!-- Sophisticated Gradient Overlay: Deeper on the left for text legibility -->
    <div class="absolute inset-0 bg-gradient-to-tr from-primary via-primary/80 to-transparent mix-blend-multiply z-10"></div>
    <div class="absolute inset-0 bg-black/20 z-10"></div>
  </div>

  <div class="container mx-auto px-6 md:px-12 relative z-20 pt-40 md:pt-32 lg:pt-20">
    
    <!-- Content Area: Using an asymmetric layout -->
    <div class="max-w-3xl space-y-10 reveal">
      
      <div class="space-y-6">
        <span class="text-accent font-sans font-bold tracking-[0.3em] text-sm uppercase block">
          The Ilori Foundation
        </span>
        
        <h1 class="font-serif text-5xl md:text-7xl lg:text-8xl leading-[1.05] tracking-tight">
          Visibility <br/> 
          <span class="text-accent italic">in Action.</span>
        </h1>
        
        <p class="font-sans text-xl md:text-2xl text-bone/90 leading-relaxed max-w-xl border-l-2 border-accent/40 pl-6 md:pl-8">
          Ensuring mothers, children, and young women most affected by health inequalities are no longer invisible in data, decision-making, and funding.
        </p>
      </div>
      
      <div class="flex flex-wrap gap-6 items-center reveal-delay-200">
        <a href="/contact" class="bg-accent text-primary font-bold py-4 px-10 rounded-sm hover:bg-white transition-all duration-300 transform hover:-translate-y-1 shadow-lg">
          Support Our Mission
        </a>
        <a href="#about" class="group flex items-center gap-3 text-bone font-semibold text-lg hover:text-accent transition-colors">
          Explore Our Impact
          <svg class="w-6 h-6 transition-transform group-hover:translate-x-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>

    </div>

  </div>

  <!-- Subtle Scroll Indicator -->
  <div class="absolute bottom-10 left-1/2 -translate-x-1/2 z-20 flex flex-col items-center gap-2 text-bone/40">
    <span class="text-[10px] uppercase tracking-[0.4em] font-bold">Scroll</span>
    <div class="w-px h-12 bg-gradient-to-b from-accent to-transparent"></div>
  </div>

</section>

<style>
  /* Carousel Animation Logic (CSS-Only) */
  .carousel-slide {
    animation: carouselFade 18s infinite;
  }

  .slide-0 { animation-delay: 0s; }
  .slide-1 { animation-delay: 6s; }
  .slide-2 { animation-delay: 12s; }

  @keyframes carouselFade {
    0% { opacity: 0; transform: scale(1.05); }
    5% { opacity: 0.5; transform: scale(1.05); }
    33.33% { opacity: 0.5; transform: scale(1.07); }
    38.33% { opacity: 0; transform: scale(1.1); }
    100% { opacity: 0; }
  }
</style>
