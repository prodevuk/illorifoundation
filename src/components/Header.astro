---
import Logo from './Logo.astro';
---
<header class="w-full absolute top-0 left-0 bg-transparent text-bone py-6 px-8 flex justify-between items-center z-50 border-b border-white/10">
  <a href="/" class="flex items-center gap-3 group">
    <Logo class="h-20 w-20 text-bone group-hover:text-accent transition-colors duration-300" />
    <div class="text-2xl font-serif tracking-widest uppercase">
      Ilori <span class="font-bold">Foundation</span>
    </div>
  </a>
  
  <nav class="hidden md:flex space-x-8 text-sm font-sans tracking-wide">
    <a href="#" class="hover:text-accent transition-colors">Our Mission</a>
    <a href="#" class="hover:text-accent transition-colors">Impact</a>
    <a href="#" class="hover:text-accent transition-colors">Stories</a>
    <a href="#" class="bg-accent text-primary px-5 py-2 rounded-sm font-bold hover:bg-white hover:text-primary transition-colors">
      Donate Now
    </a>
  </nav>

  <!-- Mobile Menu Placeholder -->
  <button class="md:hidden text-bone focus:outline-none">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
    </svg>
  </button>
</header>
