---
const stats = [
  {
    value: "15k+",
    label: "Lives Touched",
    description: "Providing essential care to mothers and infants across 12 distinct regions.",
    icon: "M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"
  },
  {
    value: "1,000",
    label: "Days of Care",
    description: "Focusing on the critical window from conception to age two for optimal development.",
    icon: "M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
  },
  {
    value: "94%",
    label: "Survival Rate",
    description: "In our partner clinics, significantly outperforming regional health averages.",
    icon: "M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
  }
];
---

<section class="bg-bone py-24 md:py-32 px-6 border-y border-accent/10">
  <div class="container mx-auto max-w-6xl">
    
    <div class="flex flex-col md:flex-row justify-between items-end mb-16 gap-8 reveal">
      <div class="max-w-xl">
        <span class="text-accent font-sans font-bold tracking-[0.2em] text-sm uppercase block mb-4">
          Evidence-Based Progress
        </span>
        <h2 class="font-serif text-4xl md:text-5xl text-primary leading-tight">
          Quantifying Our <br/><span class="italic font-normal">Commitment to Equity.</span>
        </h2>
      </div>
      <div class="flex items-center gap-3 text-charcoal/40 font-sans text-xs uppercase tracking-widest pb-2">
        <span class="w-8 h-px bg-accent/30"></span>
        Data Snapshot 2024-2025
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-0 border border-accent/20">
      {stats.map((stat, index) => (
        <div class={`p-10 md:p-12 flex flex-col items-start transition-all duration-500 hover:bg-white group reveal ${index !== stats.length - 1 ? 'border-b md:border-b-0 md:border-r border-accent/20' : ''}`} style={`transition-delay: ${index * 150}ms`}>
          <div class="w-12 h-12 rounded-full bg-primary/5 flex items-center justify-center mb-8 group-hover:bg-accent/10 transition-colors">
            <svg class="w-6 h-6 text-primary group-hover:text-accent transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={stat.icon} />
            </svg>
          </div>
          
          <div class="space-y-2">
            <span class="text-6xl md:text-7xl font-serif text-primary font-bold tracking-tighter block group-hover:translate-x-1 transition-transform">
              {stat.value}
            </span>
            <h3 class="text-xl font-sans font-bold text-charcoal uppercase tracking-widest">
              {stat.label}
            </h3>
          </div>
          
          <p class="mt-6 text-charcoal/70 leading-relaxed text-lg">
            {stat.description}
          </p>
          
          <div class="mt-8 pt-6 border-t border-accent/10 w-full opacity-0 group-hover:opacity-100 transition-opacity">
            <a href="/impact" class="text-primary font-bold text-sm uppercase tracking-wider flex items-center gap-2 hover:text-accent">
              View Detailed Report
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
              </svg>
            </a>
          </div>
        </div>
      ))}
    </div>

    <!-- Bottom Decorative Note -->
    <div class="mt-16 text-center">
      <p class="text-charcoal/40 text-sm italic">
        *All data is verified through community-level audits and independent health surveys.
      </p>
    </div>

  </div>
</section>
